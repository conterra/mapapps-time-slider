{
  "dataform-version": "1.0.0",
  "type": "gridpanel",
  "showLabels": true,
  "children": [
    {
      "type": "textarea",
      "field": "mapModelNodeIds",
      "title": "${widget.mapModelNodeIds.title}",
      "tooltip": "${widget.mapModelNodeIds.tooltip}"
    },
    {
      "type": "datetextbox",
      "field": "timeStopsOptions.timeExtent.startTime",
      "title": "${widget.startTime.title}",
      "tooltip": "${widget.startTime.tooltip}"
    },
    {
      "type": "datetextbox",
      "field": "timeStopsOptions.timeExtent.endTime",
      "title": "${widget.endTime.title}",
      "tooltip": "${widget.endTime.tooltip}"
    },
    {
      "type": "selectbox",
      "field": "timeStopsOptions.timeIntervalUnit",
      "title": "${widget.timeIntervalUnit.title}",
      "tooltip": "${widget.timeIntervalUnit.tooltip}",
      "searchAttribute": "name",
      "labelAttribute": "name",
      "values": [
        {
          "name": "${widget.timeIntervalUnit.units.seconds}",
          "value": "esriTimeUnitsSeconds"
        },
        {
          "name": "${widget.timeIntervalUnit.units.minutes}",
          "value": "esriTimeUnitsMinutes"
        },
        {
          "name": "${widget.timeIntervalUnit.units.hours}",
          "value": "esriTimeUnitsHours"
        },
        {
          "name": "${widget.timeIntervalUnit.units.days}",
          "value": "esriTimeUnitsDays"
        },
        {
          "name": "${widget.timeIntervalUnit.units.weeks}",
          "value": "esriTimeUnitsWeeks"
        },
        {
          "name": "${widget.timeIntervalUnit.units.months}",
          "value": "esriTimeUnitsMonths"
        },
        {
          "name": "${widget.timeIntervalUnit.units.years}",
          "value": "esriTimeUnitsYears"
        },
        {
          "name": "${widget.timeIntervalUnit.units.decades}",
          "value": "esriTimeUnitsDecades"
        },
        {
          "name": "${widget.timeIntervalUnit.units.centuries}",
          "value": "esriTimeUnitsCenturies"
        }
      ]
    },
    {
      "type": "numberspinner",
      "min": 1,
      "field": "timeStopsOptions.timeIntervalLength",
      "title": "${widget.timeIntervalLength.title}",
      "tooltip": "${widget.timeIntervalLength.tooltip}",
      "required": true
    },
    {
      "type": "selectbox",
      "field": "timeSliderOptions.labelSelector",
      "title": "${widget.labelSelector.title}",
      "tooltip": "${widget.labelSelector.tooltip}",
      "required": true,
      "values": [
        "date time",
        "date",
        "time"
      ]
    },
    {
      "type": "selectbox",
      "field": "timeSliderOptions.labelDatePattern",
      "title": "${widget.labelDatePattern.title}",
      "tooltip": "${widget.labelDatePattern.tooltip}",
      "required": true,
      "values": [
        "yyyy-MM-dd",
        "dd.MM.yyyy",
        "yyyyMMdd",
        "yy",
        "yyyy",
        "MM",
        "MMM",
        "MMMM"
      ]
    },
    {
      "type": "selectbox",
      "field": "timeSliderOptions.labelTimePattern",
      "title": "${widget.labelTimePattern.title}",
      "tooltip": "${widget.labelTimePattern.tooltip}",
      "required": true,
      "values": [
        "HH:mm:ss",
        "HH:mm",
        "HH"
      ]
    },
    {
      "type": "checkbox",
      "field": "timeSliderOptions.loop",
      "title": "${widget.loop.title}",
      "tooltip": "${widget.loop.tooltip}"
    },
    {
      "type": "checkbox",
      "field": "timeSliderOptions.playOnStartup",
      "title": "${widget.playOnStartup.title}",
      "tooltip": "${widget.playOnStartup.tooltip}"
    },
    {
      "type": "checkbox",
      "field": "timeSliderOptions.cumulative",
      "title": "${widget.cumulative.title}",
      "tooltip": "${widget.cumulative.tooltip}"
    },
    {
      "type": "numberspinner",
      "min": 1,
      "max": 2,
      "field": "timeSliderOptions.thumbCount",
      "title": "${widget.thumbCount.title}",
      "tooltip": "${widget.thumbCount.tooltip}"
    },
    {
      "type": "numberspinner",
      "min": 100,
      "field": "timeSliderOptions.thumbMovingRate",
      "title": "${widget.thumbMovingRate.title}",
      "tooltip": "${widget.thumbMovingRate.tooltip}"
    },
    {
      "type": "checkbox",
      "field": "timeSliderOptions.excludeDataAtLeadingThumb",
      "title": "${widget.excludeDataAtLeadingThumb.title}",
      "tooltip": "${widget.excludeDataAtLeadingThumb.tooltip}"
    },
    {
      "type": "checkbox",
      "field": "timeSliderOptions.excludeDataAtTrailingThumb",
      "title": "${widget.excludeDataAtTrailingThumb.title}",
      "tooltip": "${widget.excludeDataAtTrailingThumb.tooltip}"
    }
  ]
}