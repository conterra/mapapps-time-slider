{
  "Bundle-SymbolicName": "timeslider-config",
  "Bundle-Version": "4.0.1-SNAPSHOT",
  "Bundle-Name": "${bundleName}",
  "Bundle-Description": "${bundleDescription}",
  "Bundle-Vendor": "con terra GmbH",
  "Require-Bundle": [
    {
      "name": "dataform",
      "version": "^3.2.1"
    },
    {
      "name": "wizard",
      "version": "^3.2.1"
    }
  ],
  "Components": [
    {
      "name": "BuilderEntry",
      "impl": "ct/Stateful",
      "provides": [
        "wizard.MenuEntry"
      ],
      "propertiesConstructor": true,
      "properties": {
        "parentNodeId": "appBuilderWidgetsNode",
        "menuNode": {
          "title": "${menu.title}",
          "iconUrl": "resource('styles/images/bundleIcon.png')",
          "widget": "timeSliderBuilderWidget"
        }
      }
    },
    {
      "name": "BuilderWidget",
      "impl": "wizard/DataFormBuilderWidgetFactory",
      "provides": [
        "dijit.wizard.Widget"
      ],
      "immediate": true,
      "instanceFactory": true,
      "properties": {
        "dataformFile": "resource('./DataForm.json')",
        "bid": "dn_timeslider",
        "pid": "dn_timeslider-TimeSliderFactory",
        "id": "timeSliderBuilderWidget",
        "defaultProperties": {
          "timeSliderOpts": {
            "options": {
              "excludeDataAtLeadingThumb": false,
              "excludeDataAtTrailingThumb": false
            },
            "loop": false,
            "playOnStartup": false,
            "thumbCount": 1,
            "thumbMovingRate": 1000,
            "cumulative": true,
            "timeStops": [],
            "thumbIndexes": [
              0,
              1
            ]
          },
          "sliderLayout": {
            "timeExtent": {
              "startTime": "1976-01-01",
              "endTime": "1976-12-31"
            },
            "stops": 1,
            "unit": "esriTimeUnitsMonths",
            "selector": "date",
            "datePattern": "yyyy-MM-dd",
            "timePattern": "HH:mm:ss"
          },
          "service": [
            {
              "id": "",
              "layer": ""
            }
          ]
        },
        "description": "${widget.description}",
        "styleClass": "ctTimeSliderBuilderWidget"
      },
      "references": [
        {
          "name": "_configAdminService",
          "providing": "ct.framework.api.ConfigurationAdmin"
        },
        {
          "name": "_dataformService",
          "providing": "dataform.DataFormService"
        }
      ]
    }
  ]
}