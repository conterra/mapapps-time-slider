{
    "name": "dn_timeslider",
    "version": "6.0.0-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "sample"
    ],
    "icon": {},
    "license": {},
    "productName": "devnet-mapapps-time-slider",
    "layout-widgets": [
        {
            "widgetRole": "timeSliderWidget",
            "sublayout": [
                "desktop"
            ],
            "window": {
                "title": "${windowTitle}",
                "dockTool": "timeSliderToggleTool",
                "closable": true,
                "maximizable": true,
                "minimizeOnClose": true,
                "resizable": true,
                "marginBox": {
                    "w": 100,
                    "h": 206,
                    "b": 60,
                    "l": 20
                },
                "minSize": {
                    "w": 900,
                    "h": 100
                },
                "windowClass": "timeslider-window"
            }
        },
        {
            "widgetRole": "timeSliderWidget",
            "sublayout": [
                "tablet_landscape",
                "tablet_portrait"
            ],
            "window": {
                "title": "${windowTitle}",
                "dockTool": "timeSliderToggleTool",
                "closable": true,
                "maximizable": true,
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": "100%",
                    "h": 206,
                    "b": 0
                },
                "windowClass": "timeslider-window"
            }
        },
        {
            "widgetRole": "timeSliderWidget",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "title": "${windowTitle}",
                "dockTool": "timeSliderToggleTool",
                "dockable": true,
                "dockingBar": "${id}-dockingBarBottomLeft",
                "closable": true,
                "maximizable": true,
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": "100%",
                    "h": 206,
                    "b": 0
                },
                "windowClass": "timeslider-window"
            }
        }
    ],
    "components": [
        {
            "name": "Config",
            "impl": "./TimeSliderWidgetFactory",
            "provides": [
                "dijit.Widget",
                "dn_timeslider.TimeSliderWidget"
            ],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "timeSliderWidget",
                "fullTimeExtent": {},
                "stops": null,
                "mode": "time-window",
                "values": null,
                "loop": true,
                "playRate": 1000,
                "timeVisible": false
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "TimeSliderToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "timeSliderToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-time-clock",
                "toolRole": "toolset",
                "togglable": true,
                "noGroup": true
            }
        }
    ]
}
