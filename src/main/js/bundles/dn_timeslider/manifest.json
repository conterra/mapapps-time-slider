{
  "Bundle-SymbolicName": "dn_timeslider",
  "Bundle-Version": "3.0.6-SNAPSHOT",
  "Bundle-Name": "${bundleName}",
  "Bundle-Description": "${bundleDescription}",
  "Bundle-Vendor": "con terra GmbH",
  "Product-Name": "devnet-mapapps-time-slider",
  "Config-Bundle-Location": "/config",
  "Require-Bundle": [
    {
      "name": "map",
      "version": "^3.2.1"
    }
  ],
  "CSS-Themes-Extension": [
    {
      "name": "*",
      "files": [
        "./layout/timeslider.css"
      ]
    }
  ],
  "layout-widgets": [
    {
      "role": "timeSliderWidget",
      "window": {
        "title": "${tool.title}",
        "marginBox": {
          "w": 450,
          "h": 90
        },
        "dockTool": "timeSliderToggleTool",
        "closable": true,
        "minimizeOnClose": true,
        "resizable": true
      }
    }
  ],
  "Components": [
    {
      "name": "TimeSliderFactory",
      "instanceFactory": true,
      "provides": [
        "dijit.Widget"
      ],
      "properties": {
        "widgetRole": "timeSliderWidget",
        "timeSliderOptions": {
          "excludeDataAtLeadingThumb": false,
          "excludeDataAtTrailingThumb": false,
          "loop": false,
          "playOnStartup": false,
          "cumulative": false,
          "thumbCount": 1,
          "thumbMovingRate": 1000,
          "thumbIndexes": [
            0,
            1
          ],
          "labelSelector": "date time",
          "labelDatePattern": "yyyy-MM-dd",
          "labelTimePattern": "HH:mm:ss"
        },
        "timeStopsOptions": {
          "timeStops": [],
          "timeExtent": {
            "startTime": "1976-01-01",
            "endTime": "1976-12-31"
          },
          "timeIntervalCount": null,
          "timeIntervalLength": 1,
          "timeIntervalUnits": "esriTimeUnitsDays"
        },
        "service": {
          "id": "service_id",
          "layer": "layer_id"
        }
      },
      "references": [
        {
          "name": "_esriMap",
          "providing": "esri.Map"
        },
        {
          "name": "_esriMapReference",
          "providing": "ct.mapping.map.EsriMapReference"
        },
        {
          "name": "_mapModel",
          "providing": "ct.mapping.map.MapModel"
        }
      ]
    },
    {
      "name": "TimeSliderToggleTool",
      "impl": "ct/tools/Tool",
      "provides": [
        "ct.tools.Tool"
      ],
      "propertiesConstructor": true,
      "properties": {
        "id": "timeSliderToggleTool",
        "noGroup": true,
        "title": "${tool.title}",
        "tooltip": "${tool.tooltip}",
        "toolRole": "toolset",
        "togglable": true,
        "iconClass": "icon-time-forward"
      }
    }
  ]
}
