{
    "name": "dn_timeslider",
    "version": "2.0.0-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "sample"
    ],
    "icon": {},
    "license": {},
    "productName": "devnet-mapapps-time-slider",
    "layout-widgets": [
        {
            "widgetRole": "timeSliderWidget",
            "sublayout": [
                "desktop"
            ],
            "window": {
                "title": "${windowTitle}",
                "dockTool": "timeSliderToggleTool",
                "closable": true,
                "maximizable": true,
                "minimizeOnClose": true,
                "resizable": true,
                "marginBox": {
                    "w": 800,
                    "h": 206,
                    "b": 60,
                    "l": 20
                },
                "minSize": {
                    "w": 400,
                    "h": 206
                },
                "windowClass": "timeslider-window"
            }
        },
        {
            "widgetRole": "timeSliderWidget",
            "sublayout": [
                "tablet_landscape",
                "tablet_portrait"
            ],
            "window": {
                "title": "${windowTitle}",
                "dockTool": "timeSliderToggleTool",
                "closable": true,
                "maximizable": true,
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": "100%",
                    "h": 206,
                    "b": 0
                },
                "windowClass": "timeslider-window"
            }
        },
        {
            "widgetRole": "timeSliderWidget",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "title": "${windowTitle}",
                "dockTool": "timeSliderToggleTool",
                "dockable": true,
                "dockingBar": "${id}-dockingBarBottomLeft",
                "closable": true,
                "maximizable": true,
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": "100%",
                    "h": 206,
                    "b": 0
                },
                "windowClass": "timeslider-window"
            }
        }
    ],
    "components": [
        {
            "name": "TimeSliderToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "timeSliderToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-time-clock",
                "toolRole": "toolset",
                "togglable": true,
                "rules": {
                    "noGroup": true
                }
            }
        },
        {
            "name": "TimeSliderWidgetFactory",
            "provides": [
                "dijit.Widget"
            ],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "timeSliderWidget"
            },
            "references": [
                {
                    "name": "_timeSliderWidgetModel",
                    "providing": "dn_timeslider.TimeSliderWidgetModel"
                }
            ]
        },
        {
            "name": "Config",
            "impl": "./TimeSliderWidgetModel",
            "provides": "dn_timeslider.TimeSliderWidgetModel",
            "properties": {
                "timeStopsOptions": {},
                "labelPattern": "DD.MM.YYYY",
                "playOnStartup": false,
                "thumbMovingRate": 1000,
                "loop": false,
                "startTimeStopIndex": 0,
                "endTimeStopIndex": 1,
                "selectedLayerIds": [],
                "showLayerSelection": false
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        }
    ]
}
