{
    "name": "dn_timeslider",
    "version": "6.2.0",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "sample"
    ],
    "icon": {},
    "license": {},
    "productName": "devnet-mapapps-time-slider",
    "dependencies": {
        "esri": "^4.20.0",
        "esri-widgets": "^4.12.0",
        "map-widget": "^4.12.0",
        "apprt-binding": "^4.12.0"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "timeSliderWidget",
            "window": {
                "title": "${windowTitle}",
                "dockTool": "timeSliderToggleTool",
                "closable": true,
                "maximizable": true,
                "minimizeOnClose": true,
                "resizable": true,
                "marginBox": {
                    "w": 435,
                    "h": 230,
                    "l": 20,
                    "t": 125
                },
                "minSize": {
                    "w": 435,
                    "h": 230
                },
                "windowClass": "timeslider-window"
            }
        },
        {
            "widgetRole": "timeSliderWidget",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "dockingBar": "${id}-dockingBarBottomLeft",
                "resizable": false,
                "fixEdgesInViewport": {
                    "l": true,
                    "r": true
                },
                "marginBox": {
                    "h": 230,
                    "b": 42,
                    "r": 0,
                    "l": 0
                }
            }
        },
        {
            "widgetRole": "timeSliderWidget",
            "sublayout": [
                "mobile_landscape"
            ],
            "window": {
                "resizable": false,
                "marginBox": {
                    "h": 230,
                    "b": 0,
                    "r": 0,
                    "l": 50
                }
            }
        }
    ],
    "components": [
        {
            "name": "TimeSliderWidgetFactory",
            "provides": [
                "dijit.Widget",
                "dn_timeslider.TimeSliderWidgetFactory"
            ],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "timeSliderWidget"
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_timeSliderWidgetController",
                    "providing": "dn_timeslider.TimeSliderWidgetController"
                }
            ]
        },
        {
            "name": "Config",
            "impl": "./TimeSliderWidgetController",
            "provides": [
                "dn_timeslider.TimeSliderWidgetController"
            ],
            "properties": {
                "widgetRole": "timeSliderWidget",
                "timeExtent": null,
                "fullTimeExtent": null,
                "viewTimeExtent": null,
                "stops": null,
                "mode": "time-window",
                "loop": true,
                "playRate": 1000,
                "playOnStartup": false,
                "timeVisible": false
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "labelFormatFunction",
                    "providing": "dn_timeslider.LabelFormatFunction",
                    "cardinality": "0..1"
                }
            ]
        },
        {
            "name": "TimeSliderToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "timeSliderToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-time-clock",
                "activateHandler": "onToolActivated",
                "deactivateHandler": "onToolDeactivated",
                "toolRole": "toolset",
                "togglable": true,
                "noGroup": true
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_timeslider.TimeSliderWidgetController"
                }
            ]
        }
    ]
}
