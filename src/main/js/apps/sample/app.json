{
  "properties": {
    "title": "Time Slider Sample"
  },
  "load": {
    "bundleLocations": [
      "localbundles",
      "bundles"
    ],
    "allowedBundles": [
      "system",
      "splashscreen",
      "templates",
      "themes",
      "templatelayout",
      "map",
      "timeslider",
      "windowmanager",
      "infoviewer",
      "contentviewer",
      "toolset",
      "toolrules",
      "featureinfo",
      "banner"
    ]
  },
  "bundles": {
    "timeslider": {
      "TimeSliderFactory": {
        "timeSliderOpts": {
          "options": {
            "excludeDataAtLeadingThumb": true,
            "excludeDataAtTrailingThumb": false
          },
          "loop": true,
          "playOnStartup": true,
          "thumbCount": 2,
          "thumbMovingRate": 2000,
          "cumulative": false
        },
        "sliderLayout": {
          "timeExtent": {
            "startTime": "2000-08-04",
            "endTime": "2000-10-22"
          },
          "stops": 1,
          "unit": "esriTimeUnitsWeeks",
          "selector": "date",
          "datePattern": "MMM"
        },
        "service": [
          {
            "id": "hurricane01",
            "layer": "0"
          }
        ]
      }
    },
    "banner": {
      "BannerWidget": {
        "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
        "imagePosition": "above",
        "link": "http://conterra.de"
      }
    },
    "map": {
      "MappingResourceRegistryFactory": {
        "_knownServices": {
          "services": [
            {
              "id": "hurricane",
              "type": "AGS_DYNAMIC",
              "url": "https://sampleserver5.arcgisonline.com/arcgis/rest/services/Hurricanes/MapServer",
              "layers": [
                {
                  "id": "0",
                  "title": "Atlantic Hurricanes 2000",
                  "enabled": true
                },
                {
                  "id": "1",
                  "title": "Hurricane Track",
                  "enabled": true
                }
              ]
            },
            {
              "id": "darkbase",
              "url": "https://services.arcgisonline.com/arcgis/rest/services/Canvas/World_Dark_Gray_Base/MapServer",
              "type": "AGS_TILED"
            }
          ]
        }
      },
      "MapModelFactory": {
        "_configData": {
          "maps": [
            {
              "id": "default",
              "glass_pane": [],
              "operationalLayer": [
                {
                  "id": "hurricane01",
                  "title": "Hurricane Server",
                  "service": "hurricane",
                  "layers": [
                    "0"
                  ],
                  "enabled": true
                }
              ],
              "baseLayer": [
                {
                  "id": "background1",
                  "service": "darkbase",
                  "enabled": true
                }
              ]
            }
          ]
        }
      },
      "MapWidgetFactory": {
        "esriMapOpts": {
          "sliderStyle": "small",
          "logo": true
        }
      },
      "MapState": {
        "initialExtent": {
          "xmin": -18834083,
          "ymin": -1105585,
          "xmax": 733795,
          "ymax": 10635142,
          "spatialReference": {
            "wkid": 3857
          }
        }
      }
    },
    "templates": {
      "TemplateSelector": {
        "componentEnabled": false
      }
    },
    "themes": {
      "ThemeSelector": {
        "componentEnabled": false
      }
    },
    "toolrules": {
      "ToolActiveStateManager": {
        "activateOnStartToolIds": [
          "timeSliderToggleTool"
        ]
      }
    },
    "toolset": {
      "ToolsetManager": {
        "toolsets": [
          {
            "id": "dropdown1",
            "title": "Werkzeuge",
            "tools": [
              "timeSliderToggleTool"
            ],
            "container": "map",
            "__isDirty": true,
            "position": {
              "rel_t": 20,
              "rel_l": 20
            },
            "cssClass": "notitle",
            "windowType": "fixed",
            "tooltip": "Werkzeuge",
            "max_horizontal": 1
          }
        ]
      }
    }
  }
}
